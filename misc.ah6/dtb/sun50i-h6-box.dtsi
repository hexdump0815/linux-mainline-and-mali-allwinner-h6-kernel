// 	vqmmc-supply = <&reg_vcc1v8>;
// 	mmc-pwrseq = <&wifi_pwrseq>;
// 	bus-width = <4>;
// 	non-removable;
// 	status = "okay";
// };

&mmc2 {
	vmmc-supply = <&reg_vcc3v3>;
	vqmmc-supply = <&reg_vcc1v8>;
	bus-width = <8>;
	non-removable;
	cap-mmc-hw-reset;
	mmc-hs200-1_8v;
	status = "okay";
};

&ohci0 {
	status = "okay";
};

&ohci3 {
	status = "okay";
};

&pio {
	vcc-pc-supply = <&reg_vcc1v8>;
	vcc-pd-supply = <&reg_vcc3v3>;
	vcc-pg-supply = <&reg_vcc1v8>;
};

// required for internal eth phy
&pwm {
	status = "okay";
};

